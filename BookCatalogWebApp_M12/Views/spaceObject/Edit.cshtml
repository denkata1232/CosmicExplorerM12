@model BookCatalogWebApp_M12.Models.Book.spaceObjectFormModel

<h2 class="text-center mt-4">Edit Object</h2>
<hr />

<div class="row justify-content-center">
    <div class="col-md-6 card p-4 shadow-sm">
        <form asp-action="Edit" method="post">
            <div class="mb-3">
                <label asp-for="Name" class="form-label font-weight-bold"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Description" class="form-label font-weight-bold"></label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="CategoryId" class="form-label font-weight-bold">Category</label>
                <select asp-for="CategoryId" class="form-select">
                    @foreach (var category in Model.Categories)
                    {
                        <option value="@category.Id">@category.Name</option>
                    }
                </select>
            </div>
            <div class="mb-3">
                <label asp-for="FounderName" class="form-label font-weight-bold">Author Name</label>
                <input asp-for="FounderName" class="form-control" />
                <span asp-validation-for="FounderName" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-warning btn-lg w-100 mt-3">Update Book</button>
            <a asp-action="All" class="btn btn-secondary w-100 mt-2">Cancel</a>
        </form>
    </div>
</div>
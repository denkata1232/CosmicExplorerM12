@using System.Security.Claims
@model IEnumerable<BookCatalogWebApp_M12.Models.Book.SpaceObjectViewModel>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Object Catalog</h2>
    <a asp-action="Create" class="btn btn-primary shadow-sm">+ Add New Object</a>
</div>

<div class="row">
    @foreach (var spaceObjects in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title text-primary">@spaceObjects.Name</h5>
                    <h6 class="card-subtitle mb-2 text-muted">Category: @spaceObjects.Category</h6>
                    <p class="card-text"><strong>Owner:</strong> @spaceObjects.Owner</p>
                </div>
                <div class="card-footer bg-transparent border-top-0 d-flex justify-content-between pb-3">
                    <a asp-action="Details" asp-route-id="@spaceObjects.Id" class="btn btn-outline-info btn-sm">Details</a>

                    @if (User.Identity.IsAuthenticated && 
                    (User.FindFirstValue(ClaimTypes.NameIdentifier) == spaceObjects.OwnerId || User.Identity.Name == "admin@test.bg"))
                    {
                        <div>
                            <a asp-action="Edit" asp-route-id="@spaceObjects.Id" class="btn btn-outline-warning btn-sm">Edit</a>
                            <a asp-action="Delete" asp-route-id="@spaceObjects.Id" class="btn btn-outline-danger btn-sm">Delete</a>
                        </div>
                    }
                </div>
            </div>
        </div>
    }
</div>

@model BookCatalogWebApp_M12.Models.Book.SpaceObjectViewModel

<div class="container mt-5">
    <div class="card border-danger shadow-sm mx-auto" style="max-width: 500px;">
        <div class="card-body text-center p-5">
            <h3 class="text-danger mb-4">Are you sure?</h3>
            <p>You are about to delete the object:</p>
            <h4 class="fw-bold text-dark">"@Model.Name"</h4>
            <p class="text-muted small">This action cannot be undone.</p>

            <form asp-action="DeleteConfirmed" method="post" class="mt-4">
                <input type="hidden" name="id" value="@Model.Id" />
                <button type="submit" class="btn btn-danger btn-lg px-4 me-2">Yes, Delete It</button>
                <a asp-action="All" class="btn btn-outline-secondary btn-lg px-4">Cancel</a>
            </form>
        </div>
    </div>
</div>